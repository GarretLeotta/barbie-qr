{
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "baseUrl": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    }
}
